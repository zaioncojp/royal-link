  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    :root {
      --primary-color: #6e8efb;
      --primary-light: #a777e3;
      --primary-gradient: linear-gradient(135deg, #6e8efb, #a777e3);
      --secondary-color: #2d3748;
      --dark-color: #1a202c;
      --light-color: #f7fafc;
      --text-color: #e2e8f0;
      --text-muted: #a0aec0;
      --glass-bg: rgba(26, 32, 44, 0.8);
      --glass-border: rgba(255, 255, 255, 0.1);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
      background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
      color: var(--text-color);
      min-height: 100vh;
      line-height: 1.6;
    }
    
    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    header {
      text-align: center;
      margin-bottom: 3rem;
    }
    
    header h1 {
      font-size: 2.2rem;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      margin-bottom: 0.5rem;
    }
    
    .content {
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      border-radius: 12px;
      border: 1px solid var(--glass-border);
      padding: 2rem;
      margin-bottom: 2rem;
    }
    
    .section {
      margin-bottom: 2rem;
    }
    
    .section:last-child {
      margin-bottom: 0;
    }
    
    .section h2 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid var(--glass-border);
      color: var(--primary-light);
    }
    
    .section table {
      width: 100%;
      border-collapse: collapse;
    }
    
    .section table tr {
      border-bottom: 1px solid var(--glass-border);
    }
    
    .section table tr:last-child {
      border-bottom: none;
    }
    
    .section table th,
    .section table td {
      padding: 1rem;
      text-align: left;
    }
    
    .section table th {
      width: 30%;
      white-space: nowrap;
      color: var(--text-muted);
      font-weight: 500;
    }
    
    .footer {
      text-align: center;
      margin-top: 2rem;
    }
    
    .footer a {
      color: var(--primary-light);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      transition: all 0.3s;
    }
    
    .footer a i {
      margin-right: 0.5rem;
    }
    
    .footer a:hover {
      color: var(--primary-color);
      transform: translateY(-2px);
    }
    
    @media (max-width: 768px) {
      .container {
        padding: 1rem;
      }
      
      .content {
        padding: 1.5rem;
      }
      
      .section table th,
      .section table td {
        display: block;
        width: 100%;
      }
      
      .section table th {
        padding-bottom: 0.25rem;
      }
      
      .section table td {
        padding-top: 0.25rem;
      }
    }
  </style>
</head>
