<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ダッシュボード - ROYAL LINK</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
  <div class="dashboard-container">
    <!-- サイドバー -->
    <div class="sidebar">
      <div class="logo">
        <h2>ROYAL LINK</h2>
      </div>
      <div class="user-info">
        <div class="avatar">
          <i class="fas fa-user"></i>
        </div>
        <div class="user-name">
          <%= user.username %>
        </div>
      </div>
      <nav class="nav-menu">
        <ul>
          <li class="active"><a href="/dashboard"><i class="fas fa-tachometer-alt"></i> ダッシュボード</a></li>
          <li><a href="/domains/add"><i class="fas fa-globe"></i> ドメイン追加</a></li>
          <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> ログアウト</a></li>
        </ul>
      </nav>
    </div>

    <!-- メインコンテンツ -->
    <div class="main-content">
      <header class="top-bar">
        <h1>ダッシュボード</h1>
      </header>

      <!-- アラート -->
      <% if (error) { %>
        <div class="alert alert-error">
          <i class="fas fa-exclamation-circle"></i> <%= error %>
        </div>
      <% } %>
      
      <% if (success) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i> <%= success %>
        </div>
      <% } %>

      <!-- URL作成セクション -->
      <section class="url-shorten-section">
        <div class="card">
          <div class="card-header">
            <h2>新しいURLを短縮</h2>
          </div>
          <div class="card-body">
            <form action="/shorten" method="POST" class="url-form">
              <div class="form-group">
                <label for="originalUrl">元のURL:</label>
                <input 
                  type="text" 
                  id="originalUrl" 
                  name="originalUrl" 
                  placeholder="https://example.com/long-url-to-shorten" 
                  required
                >
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="domainId">ドメイン:</label>
                  <select id="domainId" name="domainId">
                    <option value="default">デフォルトドメイン (<%= appDomain || 'king-rule.site' %>)</option>
                    <% domains.forEach(domain => { %>
                      <option value="<%= domain._id %>" <%= domain.verified ? '' : 'disabled' %>>
                        <%= domain.domainName %> <%= domain.verified ? '' : '(未検証)' %>
                      </option>
                    <% }); %>
                  </select>
                </div>
                
                <div class="form-group" id="customSlugGroup">
                  <label for="customSlug">カスタムスラグ (オプション):</label>
                  <input 
                    type="text" 
                    id="customSlug" 
                    name="customSlug" 
                    placeholder="my-custom-url"
                    pattern="[a-zA-Z0-9-_]+"
                    title="英数字、ハイフン、アンダースコアのみ使用できます"
                  >
                </div>
              </div>
              
              <button type="submit" class="btn-primary">短縮する</button>
            </form>
          </div>
        </div>
      </section>

      <!-- ドメイン一覧 -->
      <section class="domains-section">
        <div class="card">
          <div class="card-header">
            <h2>マイドメイン</h2>
            <a href="/domains/add" class="btn-small">
              <i class="fas fa-plus"></i> 新規追加
            </a>
          </div>
          <div class="card-body">
            <% if (domains.length > 0) { %>
              <div class="domain-list">
                <div class="table-responsive">
                  <table>
                    <thead>
                      <tr>
                        <th>ドメイン名</th>
                        <th>ステータス</th>
                        <th>作成日</th>
                        <th>アクション</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% domains.forEach(domain => { %>
                        <tr>
                          <td><%= domain.domainName %></td>
                          <td>
                            <% if (domain.verified) { %>
                              <span class="badge badge-success">検証済み</span>
                            <% } else { %>
                              <span class="badge badge-warning">未検証</span>
                            <% } %>
                          </td>
                          <td><%= new Date(domain.createdAt).toLocaleDateString() %></td>
                          <td>
                            <div class="action-buttons">
                              <% if (!domain.verified) { %>
                                <a href="/domains/verify/<%= domain._id %>" class="btn-small btn-info" title="検証">
                                  <i class="fas fa-check"></i>
                                </a>
                              <% } %>
                              <a href="/domains/delete/<%= domain._id %>" class="btn-small btn-danger" title="削除" onclick="return confirm('このドメインを削除してもよろしいですか？関連するすべての短縮URLがデフォルトドメインに移行されます。');">
                                <i class="fas fa-trash"></i>
                              </a>
                            </div>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% } else { %>
              <p class="no-data">登録されたドメインがありません。「新規追加」ボタンからドメインを追加してください。</p>
            <% } %>
          </div>
        </div>
      </section>

      <!-- URL一覧とアクセス統計 -->
      <section class="urls-section">
        <div class="card">
          <div class="card-header">
            <h2>短縮URL一覧</h2>
          </div>
          <div class="card-body">
            <% if (urls.length > 0) { %>
              <!-- タブ -->
              <div class="tabs">
                <button class="tab-btn active" data-tab="list">リスト表示</button>
                <button class="tab-btn" data-tab="analytics">アクセス統計</button>
              </div>
              
              <!-- URL一覧タブ -->
              <div id="list-tab" class="tab-panel active">
                <div class="url-list">
                  <div class="table-responsive">
                    <table>
                      <thead>
                        <tr>
                          <th>元URL</th>
                          <th>短縮URL</th>
                          <th>クリック数</th>
                          <th>作成日</th>
                          <th>アクション</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% urls.forEach(url => { %>
                          <tr>
                            <td class="original-url" title="<%= url.originalUrl %>">
                              <%= url.originalUrl.length > 30 ? url.originalUrl.substring(0, 30) + '...' : url.originalUrl %>
                            </td>
                            <td>
                              <% if (url.domainId) { %>
                                <% const domain = domains.find(d => d._id.toString() === url.domainId.toString()); %>
                                <% if (domain) { %>
                                  <a href="https://<%= domain.domainName %>/<%= url.customSlug %>" target="_blank">
                                    <%= domain.domainName %>/<%= url.customSlug %>
                                  </a>
                                <% } else { %>
                                  <a href="https://<%= appDomain || 'king-rule.site' %>/s/<%= url.shortCode %>" target="_blank">
                                    <%= appDomain || 'king-rule.site' %>/s/<%= url.shortCode %>
                                  </a>
                                <% } %>
                              <% } else { %>
                                <a href="https://<%= appDomain || 'king-rule.site' %>/s/<%= url.shortCode %>" target="_blank">
                                  <%= appDomain || 'king-rule.site' %>/s/<%= url.shortCode %>
                                </a>
                              <% } %>
                              <button class="copy-btn" data-url="<%= url.domainId ? `https://${domains.find(d => d._id.toString() === url.domainId.toString())?.domainName}/${url.customSlug}` : `https://${appDomain || 'king-rule.site'}/s/${url.shortCode}` %>" title="コピー">
                                <i class="fas fa-copy"></i>
                              </button>
                            </td>
                            <td class="text-center"><%= url.clicks %></td>
                            <td><%= new Date(url.createdAt).toLocaleDateString() %></td>
                            <td>
                              <div class="action-buttons">
                                <a href="/urls/delete/<%= url._id %>" class="btn-small btn-danger" title="削除" onclick="return confirm('このURLを削除してもよろしいですか？');">
                                  <i class="fas fa-trash"></i>
                                </a>
                              </div>
                            </td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              
              <!-- アクセス統計タブ -->
              <div id="analytics-tab" class="tab-panel">
                <div class="analytics-chart">
                  <div class="chart-container">
                    <% urls.forEach(url => { %>
                      <div class="chart-bar">
                        <div class="bar" style="height: <%= Math.min(url.clicks * 10, 200) %>px;">
                          <span class="clicks"><%= url.clicks %></span>
                        </div>
                        <div class="code">
                          <%= url.domainId ? url.customSlug : url.shortCode.substr(0, 6) %>
                        </div>
                      </div>
                    <% }); %>
                  </div>
                </div>
              </div>
            <% } else { %>
              <p class="no-data">URLがありません。上のフォームから新しいURLを短縮してください。</p>
            <% } %>
          </div>
        </div>
      </section>
    </div>
  </div>

  <script>
    // タブ切り替え機能
    document.querySelectorAll('.tab-btn').forEach(button => {
      button.addEventListener('click', () => {
        // すべてのタブをリセット
        document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.tab-panel').forEach(panel => panel.classList.remove('active'));
        
        // クリックされたタブをアクティブに
        button.classList.add('active');
        document.getElementById(`${button.dataset.tab}-tab`).classList.add('active');
      });
    });
    
    // コピーボタン機能
    document.querySelectorAll('.copy-btn').forEach(button => {
      button.addEventListener('click', () => {
        const url = button.getAttribute('data-url');
        navigator.clipboard.writeText(url)
          .then(() => {
            // 成功メッセージ
            const original = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i>';
            button.classList.add('copied');
            
            setTimeout(() => {
              button.innerHTML = original;
              button.classList.remove('copied');
            }, 1500);
          })
          .catch(err => {
            console.error('コピーに失敗しました:', err);
            alert('コピーに失敗しました');
          });
      });
    });

    // ドメイン選択による表示切替
    const domainSelect = document.getElementById('domainId');
    const customSlugGroup = document.getElementById('customSlugGroup');
    
    if (domainSelect && customSlugGroup) {
      domainSelect.addEventListener('change', () => {
        if (domainSelect.value === 'default') {
          customSlugGroup.style.opacity = '0.5';
          customSlugGroup.querySelector('input').disabled = true;
        } else {
          customSlugGroup.style.opacity = '1';
          customSlugGroup.querySelector('input').disabled = false;
        }
      });
      
      // 初期設定
      if (domainSelect.value === 'default') {
        customSlugGroup.style.opacity = '0.5';
        customSlugGroup.querySelector('input').disabled = true;
      }
    }
  </script>
</body>
</html>