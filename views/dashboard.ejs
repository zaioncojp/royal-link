<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ダッシュボード - 短縮URL一覧</title>
  <style>
    body { font-family: Arial, sans-serif; }
    .url-list { margin-top: 20px; }
    .url-item { margin-bottom: 15px; }
    .error { color: red; }
    .success { color: green; }
  </style>
</head>
<body>
  <h1>ダッシュボード</h1>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <% if (success) { %>
    <p class="success"><%= success %></p>
  <% } %>

  <form action="/shorten" method="POST">
    <label for="originalUrl">URLを入力してください:</label>
    <input type="url" name="originalUrl" id="originalUrl" required>
    <button type="submit">短縮URLを作成</button>
  </form>

  <section class="url-list">
    <h2>短縮URL一覧</h2>
    <% if (urls && urls.length > 0) { %>
      <ul>
        <% urls.forEach(function(url) { %>
          <li class="url-item">
            <a href="<%= url.getFullUrl() %>" target="_blank"><%= url.getFullUrl() %></a>
            <p>元のURL: <%= url.originalUrl %></p>
            <p>作成日: <%= new Date(url.createdAt).toLocaleString() %></p>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>短縮URLはまだありません。</p>
    <% } %>
  </section>
</body>
</html>