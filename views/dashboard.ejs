        <a href="/dashboard" class="refresh-btn">
          <i class="fas fa-sync-alt"></i> <span class="btn-text">更新</span>
        </a>
      </header>

      <% if (error) { %>
        <div class="alert alert-error">
          <i class="fas fa-exclamation-circle"></i> <%= error %>
        </div>
      <% } %>

      <% if (success) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i> <%= success %>
        </div>
      <% } %>

      <!-- Subscription Status Check -->
      <% if (!user.hasPremium && (!subscription || subscription.status !== 'active')) { %>
        <div class="subscription-banner">
          <div class="subscription-message">
            <i class="fas fa-crown"></i>
            <div class="message-content">
              <h3>プレミアム機能を利用するにはサブスクリプションが必要です</h3>
              <p>URL短縮、独自ドメイン、詳細な統計情報などの機能を使用するには、プレミアムプランにアップグレードしてください。</p>
            </div>
          </div>
          <a href="/subscription/plans" class="btn-premium">
            <i class="fas fa-arrow-right"></i> プランを見る
          </a>
        </div>
        
        <!-- 無料プラン情報表示 -->
        <div class="free-plan-info">
          <div class="free-plan-status">
            <i class="fas fa-info-circle"></i>
            <div class="free-plan-details">
              <h3>無料プラン</h3>
              <div class="link-count">
                <% 
                  // URLの数をカウント
                  const urlCount = urls ? urls.length : 0;
                  const progressPercent = Math.min(100, (urlCount / 3) * 100);
                %>
                <div class="link-progress">
                  <div class="progress-bar">
                    <div class="progress-fill" style="width: <%= progressPercent %>%;"></div>
                  </div>
                  <div class="progress-text">
                    <span><%= urlCount %> / 3</span> 短縮リンク
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="plan-features">
            <div class="feature <%= urlCount < 3 ? 'available' : 'unavailable' %>">
              <i class="fas fa-check-circle"></i> 基本URL短縮 (king-rule.site)
            </div>
            <div class="feature unavailable">
              <i class="fas fa-times-circle"></i> カスタムドメイン
            </div>
            <div class="feature unavailable">
              <i class="fas fa-times-circle"></i> アクセス統計
            </div>
            <div class="feature unavailable">
              <i class="fas fa-times-circle"></i> カスタムスラグ
            </div>
          </div>
          <a href="/subscription/plans" class="btn-upgrade">
            <i class="fas fa-crown"></i> プレミアムにアップグレード
          </a>
        </div>
      <% } %>

      <!-- URL shortening form -->
      <% if (user.hasPremium || (subscription && subscription.status === 'active')) { %>
        <!-- プレミアムユーザー用のフォーム -->
        <%- include('partials/url-form') %>
      <% } else { %>
        <!-- 無料プラン用のフォーム -->
        <section class="url-shorten-section">
          <div class="card">
            <div class="card-header">
