<!DOCTYPE html>
<html lang="ja">
<%- include('partials/header') %>
<body>
  <!-- Background effects -->
  <div class="bg-shapes">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
    <div class="shape shape-3"></div>
  </div>

  <div class="dashboard-container">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main content -->
    <div class="main-content">
      <header class="top-bar">
        <h1>ダッシュボード</h1>
        <a href="/dashboard" class="refresh-btn">
          <i class="fas fa-sync-alt"></i> 更新
        </a>
      </header>

      <% if (error) { %>
        <div class="alert alert-error">
          <i class="fas fa-exclamation-circle"></i> <%= error %>
        </div>
      <% } %>

      <% if (success) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i> <%= success %>
        </div>
      <% } %>

      <!-- Subscription Status Check -->
      <% if (!user.hasPremium && (!subscription || subscription.status !== 'active')) { %>
        <div class="subscription-banner">
          <div class="subscription-message">
            <i class="fas fa-crown"></i>
            <div class="message-content">
              <h3>プレミアム機能を利用するにはサブスクリプションが必要です</h3>
              <p>URL短縮、独自ドメイン、詳細な統計情報などの機能を使用するには、プレミアムプランにアップグレードしてください。</p>
            </div>
          </div>
          <a href="/subscription/plans" class="btn-premium">
            <i class="fas fa-arrow-right"></i> プランを見る
          </a>
        </div>
      <% } else { %>
        <!-- URL shortening form -->
        <%- include('partials/url-form') %>
      <% } %>

      <!-- URLs list -->
      <section class="urls-section">
        <div class="card">
          <div class="card-header">
            <h2><i class="fas fa-chart-line"></i> 短縮URL一覧</h2>
          </div>
          <div class="card-body">
            <% if (!user.hasPremium && (!subscription || subscription.status !== 'active')) { %>
              <div class="premium-required">
                <i class="fas fa-lock"></i>
                <h3>プレミアム機能</h3>
                <p>この機能を利用するには、プレミアムプランへの登録が必要です。</p>
                <a href="/subscription/plans" class="btn-premium-small">
                  プレミアムに登録する
                </a>
              </div>
            <% } else if (urls && urls.length > 0) { %>
              <!-- タブ -->
              <div class="tabs">
                <button class="tab-btn active" data-tab="list">リスト表示</button>
                <button class="tab-btn" data-tab="analytics">アクセス統計</button>
              </div>
              
              <!-- URL一覧タブ -->
              <div id="list-tab" class="tab-panel active">
                <div class="url-list">
                  <div class="table-responsive">
                    <table>
                      <thead>
                        <tr>
                          <th>元URL</th>
                          <th>短縮URL</th>
                          <th>クリック数</th>
                          <th>作成日</th>
                          <th>アクション</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (let i = 0; i < urls.length; i++) { %>
                          <tr>
                            <td class="original-url" title="<%= urls[i].originalUrl %>">
                              <%= urls[i].originalUrl.length > 30 ? urls[i].originalUrl.substring(0, 30) + '...' : urls[i].originalUrl %>
                            </td>
                            <td>
                              <% 
                                const domain = typeof appDomain !== 'undefined' ? appDomain : 'king-rule.site';
                                let shortUrl = '';
                                if (urls[i].customSlug) {
                                  shortUrl = `https://${domain}/${urls[i].customSlug}`;
                                } else {
                                  shortUrl = `https://${domain}/s/${urls[i].shortCode}`;
                                }
                              %>
                              <a href="<%= shortUrl %>" target="_blank">
                                <%= shortUrl %>
                              </a>
                              <button class="copy-btn" data-url="<%= shortUrl %>">
                                <i class="fas fa-copy"></i>
                              </button>
                            </td>
                            <td><%= urls[i].clicks || 0 %></td>
                            <td><%= new Date(urls[i].createdAt).toLocaleDateString() %></td>
                            <td>
                              <div class="action-buttons">
                                <a href="/urls/detail/<%= urls[i]._id %>" class="btn-small btn-info" title="詳細">
                                  <i class="fas fa-chart-bar"></i>
                                </a>
                                <a href="/urls/delete/<%= urls[i]._id %>" class="btn-small btn-danger" title="削除" onclick="return confirm('このURLを削除してもよろしいですか？');">
                                  <i class="fas fa-trash"></i>
                                </a>
                              </div>
                            </td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              
              <!-- アクセス統計タブ -->
              <div id="analytics-tab" class="tab-panel">
                <div class="analytics-chart">
                  <h3>クリック数の推移</h3>
                  <div class="chart-container">
                    <% 
                      // クリック数の多い順にソート
                      const sortedUrls = [...urls].sort((a, b) => (b.clicks || 0) - (a.clicks || 0)).slice(0, 10);
                      const maxClicks = Math.max(...sortedUrls.map(url => url.clicks || 0), 1);
                    %>
                    
                    <% for (let i = 0; i < sortedUrls.length; i++) { %>
                      <div class="chart-bar">
                        <div class="bar" style="height: <%= Math.max(20, ((sortedUrls[i].clicks || 0) / maxClicks) * 250) %>px">
                          <span class="clicks"><%= sortedUrls[i].clicks || 0 %></span>
                        </div>
                        <span class="code"><%= sortedUrls[i].customSlug || sortedUrls[i].shortCode %></span>
                      </div>
                    <% } %>
                  </div>
                </div>
                
                <!-- 時間帯別アクセスグラフを追加 -->
                <div class="analytics-chart">
                  <h3>時間帯別アクセス</h3>
                  <div class="time-chart-container">
                    <% for (let i = 0; i < hourlyStats.length; i++) { %>
                      <div class="chart-bar">
                        <div class="bar" style="height: <%= Math.max(20, (hourlyStats[i].count / Math.max(...hourlyStats.map(s => s.count || 1)) * 250)) %>px">
                          <span class="clicks"><%= hourlyStats[i].count %></span>
                        </div>
                        <span class="code"><%= hourlyStats[i].hour %>時</span>
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            <% } else { %>
              <p class="no-data">短縮URLがありません。上のフォームからURLを短縮してください。</p>
            <% } %>
          </div>
        </div>
      </section>

      <!-- Domains list -->
      <section class="domains-section">
        <div class="card">
          <div class="card-header">
            <h2><i class="fas fa-globe"></i> ドメイン一覧</h2>
            <% if (user.hasPremium || (subscription && subscription.status === 'active')) { %>
              <a href="/domains/add" class="btn-small">
                <i class="fas fa-plus"></i> ドメイン追加
              </a>
            <% } %>
          </div>
          <div class="card-body">
            <% if (!user.hasPremium && (!subscription || subscription.status !== 'active')) { %>
              <div class="premium-required">
                <i class="fas fa-lock"></i>
                <h3>プレミアム機能</h3>
                <p>独自ドメイン機能を利用するには、プレミアムプランへの登録が必要です。</p>
                <a href="/subscription/plans" class="btn-premium-small">
                  プレミアムに登録する
                </a>
              </div>
            <% } else if (domains && domains.length > 0) { %>
              <div class="domains-list">
                <div class="table-responsive">
                  <table>
                    <thead>
                      <tr>
                        <th>ドメイン名</th>
                        <th>状態</th>
                        <th>作成日</th>
                        <th>アクション</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (let i = 0; i < domains.length; i++) { %>
                        <tr>
                          <td><%= domains[i].domainName %></td>
                          <td>
                            <% if (domains[i].verified) { %>
                              <span class="badge badge-success">検証済み</span>
                            <% } else { %>
                              <span class="badge badge-warning">未検証</span>
                            <% } %>
                          </td>
                          <td><%= new Date(domains[i].createdAt).toLocaleDateString() %></td>
                          <td>
                            <div class="action-buttons">
                              <% if (!domains[i].verified) { %>
                                <a href="/domains/verify/<%= domains[i]._id %>" class="btn-small btn-primary" title="検証">
                                  <i class="fas fa-check-circle"></i>
                                </a>
                              <% } %>
                              <a href="/domains/delete/<%= domains[i]._id %>" class="btn-small btn-danger" title="削除" onclick="return confirm('このドメインを削除してもよろしいですか？');">
                                <i class="fas fa-trash"></i>
                              </a>
                            </div>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% } else { %>
              <p class="no-data">登録されたドメインがありません。「ドメイン追加」ボタンからドメインを追加できます。</p>
            <% } %>
          </div>
        </div>
      </section>

      <!-- Subscription Status (if active) -->
      <% if (user.hasPremium || (subscription && subscription.status === 'active')) { %>
      <section class="subscription-section">
        <div class="card">
          <div class="card-header">
            <h2><i class="fas fa-crown"></i> プレミアムステータス</h2>
          </div>
          <div class="card-body">
            <div class="subscription-status">
              <div class="status-info">
                <div class="status-icon">
                  <i class="fas fa-check-circle"></i>
                </div>
                <div class="status-details">
                  <h3>アクティブ</h3>
                  <% if (subscription) { %>
                    <p>次回更新日: <%= new Date(subscription.nextPaymentDate).toLocaleDateString() %></p>
                    <% if (subscription.planType === 'annual') { %>
                      <span class="badge badge-premium">年間プラン</span>
                    <% } else { %>
                      <span class="badge badge-premium">月額プラン</span>
                    <% } %>
                  <% } else { %>
                    <p>プレミアム機能が有効です</p>
                  <% } %>
                </div>
              </div>
              <div class="status-actions">
                <a href="/subscription/manage" class="btn-secondary">
                  <i class="fas fa-cog"></i> 管理
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>
      <% } %>
    </div>
  </div>

  <script>
    // タブ切り替え機能
    document.addEventListener('DOMContentLoaded', function() {
      const tabBtns = document.querySelectorAll('.tab-btn');
      
      tabBtns.forEach(btn => {
        btn.addEventListener('click', function() {
          const tabId = this.getAttribute('data-tab');
          
          // 全てのタブボタンからアクティブクラスを削除
          tabBtns.forEach(btn => btn.classList.remove('active'));
          // 全てのタブパネルを非表示に
          document.querySelectorAll('.tab-panel').forEach(panel => panel.classList.remove('active'));
          
          // クリックされたタブボタンをアクティブに
          this.classList.add('active');
          // 対応するタブパネルを表示
          document.getElementById(`${tabId}-tab`).classList.add('active');
        });
      });
      
      // コピーボタン機能を追加
      const copyButtons = document.querySelectorAll('.copy-btn');
      
      copyButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          const url = this.getAttribute('data-url');
          
          navigator.clipboard.writeText(url)
            .then(() => {
              // コピー成功時の表示
              const originalHTML = this.innerHTML;
              this.innerHTML = '<i class="fas fa-check"></i>';
              this.classList.add('copied');
              
              setTimeout(() => {
                this.innerHTML = originalHTML;
                this.classList.remove('copied');
              }, 2000);
            })
            .catch(err => {
              console.error('コピーに失敗しました:', err);
            });
        });
      });
    });
  </script>

  <style>
    /* 更新ボタンのスタイル */
    .refresh-btn {
      display: flex;
      align-items: center;
      background: rgba(255, 255, 255, 0.1);
      color: var(--light-color);
      padding: 0.5rem 1rem;
      border-radius: 8px;
      text-decoration: none;
      transition: all 0.3s;
      font-weight: 500;
      border: 1px solid var(--glass-border);
    }
    
    .refresh-btn i {
      margin-right: 0.5rem;
    }
    
    .refresh-btn:hover {
      background: var(--primary-gradient);
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(110, 142, 251, 0.3);
      color: white;
      text-decoration: none;
    }
    
    .refresh-btn:active {
      transform: translateY(1px);
    }
    
    /* サブスクリプションバナー */
    .subscription-banner {
      background: linear-gradient(135deg, rgba(110, 142, 251, 0.2), rgba(167, 119, 227, 0.2));
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border: 1px solid rgba(110, 142, 251, 0.3);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.1);
    }
    
    .subscription-message {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }
    
    .subscription-message i {
      font-size: 2.5rem;
      color: #ffc107;
      text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }
    
    .message-content h3 {
      margin-bottom: 0.5rem;
      font-size: 1.2rem;
      font-weight: 600;
    }
    
    .message-content p {
      max-width: 600px;
      opacity: 0.9;
    }
    
    .btn-premium {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s;
      border: none;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(255, 107, 107, 0.3);
      white-space: nowrap;
    }
    
    .btn-premium:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 15px rgba(255, 107, 107, 0.4);
    }
    
    .btn-premium i {
      margin-right: 0.5rem;
    }
    
    .btn-premium-small {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s;
      border: none;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(255, 107, 107, 0.3);
    }
    
    .btn-premium-small:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(255, 107, 107, 0.4);
    }
    
    /* Premium Required Message */
    .premium-required {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 3rem 1rem;
      text-align: center;
    }
    
    .premium-required i {
      font-size: 3rem;
      color: rgba(255, 255, 255, 0.2);
      margin-bottom: 1.5rem;
    }
    
    .premium-required h3 {
      margin-bottom: 0.5rem;
      font-size: 1.5rem;
      font-weight: 600;
    }
    
    .premium-required p {
      margin-bottom: 1.5rem;
      max-width: 500px;
      opacity: 0.7;
    }
    
    /* サブスクリプションステータス */
    .subscription-section {
      margin-top: 2rem;
    }
    
    .subscription-status {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .status-info {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }
    
    .status-icon {
      font-size: 2.5rem;
      color: var(--success-color);
    }
    
    .status-details h3 {
      margin-bottom: 0.5rem;
      font-size: 1.2rem;
    }
    
    .badge-premium {
      background: linear-gradient(135deg, rgba(255, 107, 107, 0.2), rgba(255, 142, 142, 0.2));
      color: #ff6b6b;
      border: 1px solid rgba(255, 107, 107, 0.3);
    }
    
    .status-actions {
      display: flex;
      gap: 1rem;
    }
    
    .btn-secondary {
      display: inline-flex;
      align-items: center;
      background: transparent;
      color: var(--light-color);
      border: 1px solid rgba(255, 255, 255, 0.3);
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.3s;
    }
    
    .btn-secondary:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: var(--primary-light);
    }
    
    .btn-secondary i {
      margin-right: 0.5rem;
    }
    
    /* ドメイン一覧専用スタイル */
    .domains-section {
      margin-top: 2rem;
    }
    
    .badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
    }
    
    .badge-success {
      background: rgba(72, 187, 120, 0.2);
      color: var(--success-color);
      border: 1px solid rgba(72, 187, 120, 0.3);
    }
    
    .badge-warning {
      background: rgba(237, 137, 54, 0.2);
      color: var(--warning-color);
      border: 1px solid rgba(237, 137, 54, 0.3);
    }
    
    /* URL一覧と統計タブ専用スタイル */
    .original-url {
      max-width: 300px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    
    .copy-btn {
      background: none;
      border: none;
      color: var(--primary-color);
      cursor: pointer;
      font-size: 1rem;
      padding: 0.25rem;
      margin-left: 0.5rem;
      border-radius: 4px;
      transition: all 0.3s;
    }
    
    .copy-btn:hover {
      background: rgba(110, 142, 251, 0.2);
    }
    
    .copy-btn.copied {
      color: var(--success-color);
    }
    
    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }
    
    /* アクセス統計 */
    .analytics-chart {
      background: rgba(26, 32, 44, 0.4);
      border-radius: 8px;
      padding: 1.5rem;
      margin-top: 1rem;
    }
    
    .analytics-chart h3 {
      margin-bottom: 1.5rem;
      font-size: 1.1rem;
      text-align: center;
      color: var(--light-color);
    }
    
    .chart-container {
      display: flex;
      justify-content: space-around;
      align-items: flex-end;
      height: 300px;
      padding-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .chart-bar {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-width: 60px;
    }
    
    .bar {
      width: 40px;
      background: var(--primary-gradient);
      border-radius: 8px 8px 0 0;
      position: relative;
      box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.1), 0 0 10px rgba(110, 142, 251, 0.3);
      min-height: 20px;
      transition: height 1s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    
    .clicks {
      position: absolute;
      top: -25px;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(26, 32, 44, 0.8);
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 600;
      white-space: nowrap;
    }
    
    .code {
      margin-top: 0.5rem;
      font-size: 0.75rem;
      color: var(--light-color);
      opacity: 0.7;
    }
    
    /* 時間帯チャート */
    .time-chart-container {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      height: 300px;
      padding-bottom: 2rem;
      overflow-x: auto;
    }
    
    .time-chart-container .chart-bar {
      min-width: 30px;
      margin: 0 2px;
    }
    
    .time-chart-container .bar {
      width: 20px;
    }
    
    /* タブ */
    .tabs {
      display: flex;
      margin-bottom: 1.5rem;
      border-bottom: 1px solid var(--glass-border);
    }
    
    .tab-btn {
      padding: 0.75rem 1.5rem;
      background: none;
      border: none;
      border-bottom: 2px solid transparent;
      color: var(--light-color);
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s;
      opacity: 0.7;
    }
    
    .tab-btn:hover {
      opacity: 1;
    }
    
    .tab-btn.active {
      opacity: 1;
      border-bottom-color: var(--primary-color);
      color: var(--primary-light);
    }
    
    .tab-panel {
      display: none;
    }
    
    .tab-panel.active {
      display: block;
      animation: fadeIn 0.5s ease;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    /* レスポンシブデザイン */
    @media (max-width: 768px) {
      .subscription-banner {
        flex-direction: column;
        text-align: center;
      }
      
      .subscription-message {
        flex-direction: column;
        margin-bottom: 1.5rem;
      }
      
      .status-info {
        flex-direction: column;
        text-align: center;
        margin-bottom: 1.5rem;
      }
      
      .subscription-status {
        flex-direction: column;
      }
      
      .status-actions {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</body>
</html>