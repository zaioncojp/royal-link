                  <div class="form-group modern-input-group">
                    <div class="input-icon-wrapper">
                      <i class="fas fa-globe input-icon"></i>
                      <input 
                        type="text" 
                        id="originalUrl" 
                        name="originalUrl" 
                        placeholder="https://example.com/長いURLをここに入力" 
                        class="modern-input"
                        required
                      >
                      <div class="input-focus-effect"></div>
