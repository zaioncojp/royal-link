<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ダッシュボード - ROYAL LINK</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    :root {
      --primary-color: #6e8efb;
      --primary-light: #a777e3;
      --primary-gradient: linear-gradient(135deg, #6e8efb, #a777e3);
      --secondary-color: #2d3748;
      --dark-color: #1a202c;
      --light-color: #f7fafc;
      --success-color: #48bb78;
      --warning-color: #ed8936;
      --danger-color: #f56565;
      --glass-bg: rgba(255, 255, 255, 0.1);
      --glass-border: rgba(255, 255, 255, 0.2);
      --card-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
      --neon-glow: 0 0 10px rgba(110, 142, 251, 0.6), 0 0 20px rgba(110, 142, 251, 0.3);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
      background: #0f0c29;
      background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
      color: var(--light-color);
      min-height: 100vh;
      overflow-x: hidden;
    }
    
    .dashboard-container {
      display: flex;
      min-height: 100vh;
      position: relative;
    }
    
    /* メインコンテンツ */
    .main-content {
      flex: 1;
      padding: 2rem;
      margin-left: 260px;
      transition: all 0.3s ease;
    }
    
    .top-bar {
      margin-bottom: 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .top-bar h1 {
      font-size: 2rem;
      font-weight: 600;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }
    
    /* アラート */
    .alert {
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      backdrop-filter: blur(5px);
      animation: fadeIn 0.5s ease;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .alert i {
      margin-right: 1rem;
      font-size: 1.2rem;
    }
    
    .alert-error {
      background: rgba(245, 101, 101, 0.2);
      border-left: 4px solid var(--danger-color);
    }
    
    .alert-success {
      background: rgba(72, 187, 120, 0.2);
      border-left: 4px solid var(--success-color);
    }
    
    /* カード */
    .card {
      background: rgba(26, 32, 44, 0.6);
      backdrop-filter: blur(10px);
      border-radius: 12px;
      overflow: hidden;
      margin-bottom: 2rem;
      box-shadow: var(--card-shadow);
      border: 1px solid var(--glass-border);
      transition: all 0.3s ease;
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(31, 38, 135, 0.3);
    }
    
    .card-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--glass-border);
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(26, 32, 44, 0.8);
    }
    
    .card-header h2 {
      font-size: 1.25rem;
      margin: 0;
      color: var(--light-color);
      font-weight: 600;
    }
    
    .card-body {
      padding: 1.5rem;
    }
    
    /* ボタン */
    .btn-primary {
      background: var(--primary-gradient);
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 4px 10px rgba(110, 142, 251, 0.3);
      animation: pulse 2s infinite;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(110, 142, 251, 0.4);
    }
    
    .btn-primary:active {
      transform: translateY(1px);
    }
    
    .btn-small {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
      border-radius: 6px;
      background: var(--primary-gradient);
      color: white;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      transition: all 0.3s;
    }
    
    .btn-small i {
      margin-right: 0.5rem;
    }
    
    .btn-small:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(110, 142, 251, 0.3);
    }
    
    .btn-danger {
      background: linear-gradient(135deg, #f56565, #e53e3e);
    }
    
    .btn-info {
      background: linear-gradient(135deg, #4299e1, #3182ce);
    }
    
    /* テーブル */
    .table-responsive {
      overflow-x: auto;
      border-radius: 8px;
      background: rgba(26, 32, 44, 0.4);
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
      overflow: hidden;
    }
    
    table th,
    table td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid var(--glass-border);
    }
    
    table th {
      background: rgba(26, 32, 44, 0.8);
      font-weight: 600;
      color: var(--light-color);
      white-space: nowrap;
    }
    
    table tr:last-child td {
      border-bottom: none;
    }
    
    table tr {
      transition: all 0.3s;
    }
    
    table tr:hover {
      background: rgba(110, 142, 251, 0.1);
    }
    
    /* バッジ */
    .badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
    }
    
    .badge-success {
      background: rgba(72, 187, 120, 0.2);
      color: var(--success-color);
      border: 1px solid rgba(72, 187, 120, 0.3);
    }
    
    .badge-warning {
      background: rgba(237, 137, 54, 0.2);
      color: var(--warning-color);
      border: 1px solid rgba(237, 137, 54, 0.3);
    }
    
    /* タブ */
    .tabs {
      display: flex;
      margin-bottom: 1.5rem;
      border-bottom: 1px solid var(--glass-border);
    }
    
    .tab-btn {
      padding: 0.75rem 1.5rem;
      background: none;
      border: none;
      border-bottom: 2px solid transparent;
      color: var(--light-color);
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s;
      opacity: 0.7;
    }
    
    .tab-btn:hover {
      opacity: 1;
    }
    
    .tab-btn.active {
      opacity: 1;
      border-bottom-color: var(--primary-color);
      color: var(--primary-light);
    }
    
    .tab-panel {
      display: none;
    }
    
    .tab-panel.active {
      display: block;
      animation: fadeIn 0.5s ease;
    }
    
    /* その他のスタイル */
    .no-data {
      text-align: center;
      padding: 2rem;
      color: var(--light-color);
      opacity: 0.7;
      font-size: 1.1rem;
    }
    
    a {
      color: var(--primary-light);
      text-decoration: none;
      transition: all 0.3s;
    }
    
    a:hover {
      color: var(--primary-color);
      text-decoration: underline;
    }
    
    /* レスポンシブデザイン */
    @media (max-width: 1024px) {
      .form-row {
        flex-direction: column;
      }
    }
    
    @media (max-width: 768px) {
      .sidebar {
        width: 80px;
        padding: 1rem 0;
      }
      
      .logo h2 {
        font-size: 1.2rem;
      }
      
      .logo {
        padding: 0 0.5rem 1rem;
      }
      
      .user-info {
        flex-direction: column;
        padding: 0 0.5rem;
      }
      
      .user-name {
        display: none;
      }
      
      .avatar {
        margin-right: 0;
        margin-bottom: 1rem;
      }
      
      .nav-menu li a {
        padding: 1rem 0;
        justify-content: center;
      }
      
      .nav-menu li a i {
        margin-right: 0;
        font-size: 1.4rem;
      }
      
      .nav-menu li a span {
        display: none;
      }
      
      .main-content {
        margin-left: 80px;
        padding: 1rem;
      }
    }
    
    @media (max-width: 480px) {
      .main-content {
        margin-left: 0;
        padding: 1rem;
      }
      
      .sidebar {
        transform: translateX(-100%);
      }
      
      .sidebar.active {
        transform: translateX(0);
      }
      
      .top-bar {
        position: relative;
      }
      
      .menu-toggle {
        display: block;
        position: absolute;
        left: 1rem;
        top: 1rem;
        background: none;
        border: none;
        color: var(--light-color);
        font-size: 1.5rem;
        cursor: pointer;
        z-index: 20;
      }
    }
    
    /* アニメーション効果 */
    @keyframes pulse {
      0% { box-shadow: 0 0 0 0 rgba(110, 142, 251, 0.4); }
      70% { box-shadow: 0 0 0 10px rgba(110, 142, 251, 0); }
      100% { box-shadow: 0 0 0 0 rgba(110, 142, 251, 0); }
    }
    
    @keyframes gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    
    body {
      background-size: 200% 200%;
      animation: gradient 15s ease infinite;
    }
    
    /* 装飾的な要素 */
    .bg-shapes {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: -1;
      opacity: 0.5;
    }
    
    .shape {
      position: absolute;
      border-radius: 50%;
      background: var(--primary-gradient);
      filter: blur(60px);
    }
    
    .shape-1 {
      top: 10%;
      left: 10%;
      width: 300px;
      height: 300px;
      opacity: 0.3;
    }
    
    .shape-2 {
      bottom: 10%;
      right: 10%;
      width: 200px;
      height: 200px;
      opacity: 0.2;
    }
    
    .shape-3 {
      top: 50%;
      left: 50%;
      width: 400px;
      height: 400px;
      opacity: 0.1;
      transform: translate(-50%, -50%);
    }
  </style>
</head>
